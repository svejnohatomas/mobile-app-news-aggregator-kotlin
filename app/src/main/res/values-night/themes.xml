<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAggregator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_900</item>
        <item name="colorPrimaryVariant">@color/blue_grey_900_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_grey_800</item>
        <item name="colorSecondaryVariant">@color/blue_grey_800_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/blue_grey_900_dark</item>
        <item name="colorOnBackground">@color/blue_grey_800_light</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/blue_grey_800</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>

        <!-- Error colors -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">@color/white</item>
    </style>
</resources>